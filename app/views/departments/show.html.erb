<h1>
  Department #<%= @the_dept.id %> details
</h1>

<div>
  <a href="/departments">
    Go back
  </a>
</div>

<div>
  <a href="/delete_department/<%= @the_dept.id %>">
    Delete department
  </a>
</div>

<hr>

<form action="/modify_department/<%= @the_dept.id %>" method="post">
  <div>
    <label for="name_box">
      Name
    </label>

    <input id="name_box" type="text" name="query_name" value="<%= @the_dept.name %>">
  </div>

  <button>
    Update department
  </button>
</form>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_dept.name %>
  </dd>

  <dt>
    Number of courses
  </dt>
  <dd>
    <%= Course.where({ :department_id => @the_dept.id }).count %>
  </dd>

</dl>

<hr>

<h2>Courses</h2>
<% courses = Course.where({ :department_id => @the_dept.name }) %>
<ul>
  <% courses.each do |course| %>
    <li>
      <a href="/courses/<%= course.id %>"><%= course.title %></a>
    </li>
  <% end %>
</ul>
